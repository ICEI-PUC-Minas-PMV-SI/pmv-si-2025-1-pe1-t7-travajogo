{
  "manifest_version": 3,
  "name": "Anti-Bets:Bloqueador e Filtro de Cores",
  "version": "1.0",
  "description": "Bloqueia sites de apostas ou remove suas cores.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
